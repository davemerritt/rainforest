<h1>Products</h1>
<%= link_to 'New Product', "/products/new" %>
<%= link_to 'New User', "/users/new" %>

<% @products.each do |product| %>
	<p>
		<h2><%= link_to product.name, product %></h2>
		<%= product.description %><br><br> 
		<%= number_to_currency(product.formatted_price) %>
	</p>

<% end %> 	

